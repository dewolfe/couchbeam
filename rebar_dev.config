%%-*- mode: erlang -*-

{lib_dirs, ["deps"]}.


{erl_opts,
 [{i, "include"},
  {i, "deps"},
  {src_dirs, ["src"]},
  debug_info
 ]
}.

{deps, [
    {jsx, ".*", {git, "https://github.com/talentdeficit/jsx.git",
                        {tag,"v1.4.4"}}},

    %% erlang-oauth for oauth authentification
    {oauth, ".*", {git,"https://github.com/refuge/erlang-oauth.git",
                   "master"}},

    %% hackney for doing HTTP requests
    {hackney, ".*", {git, "https://github.com/benoitc/hackney.git",
                     "0.8.2"}},

    {edown, ".*",
         {git, "https://github.com/esl/edown.git", "HEAD"}}
]}.

{edoc_opts, [{application, ["couchbeam"]},
             {doclet, edown_doclet},
             {subpackages, false},
             {top_level_readme,
              {"./README.md", "http://github.com/benoitc/couchbeam"}}]}.
